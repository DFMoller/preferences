{
	"name": "preferences-mcp-server",

	// Path to docker-compose.yml relative to devcontainer.json.
	"dockerComposeFile": "docker-compose.yml",

	// This is the service vscode is going to attach to.
	"service": "dev",

	// Here we specify /workspace, since we mounted the current project path to /workspace
    // in docker-compose.yml.
	"workspaceFolder": "/workspace",

    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/workspace/.venv/bin/python"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "tamasfe.even-better-toml",
                "eamodio.gitlens",
                "github.copilot",
                "github.copilot-chat",
                "ms-azuretools.vscode-docker",
                "anthropic.claude-code"
            ]
        }
    },

	// Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "ubuntu"
}
